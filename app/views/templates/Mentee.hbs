<div class="navbar navbar-inverse">
  <div class="navbar-inner">
    <a class="brand" href="#">Home</a>
  </div>
</div>
<div id="profile-pic" class="row-fluid pagination-centered" style="margin-bottom: -0.9em">
  {{#if profile_pic_url}}
  <img src="{{profile_pic_url}}" />
  {{else}}
  <i class="img-polaroid icon-user icon-4x" style="padding: 0.2em 0.4em 0.2em 0.4em; display: inline-block"></i>
  {{/if}}
</div>
<div class="row-fluid pagination-centered">
  <a class="btn" href="#mentees/{{id}}/edit">Edit</a>
</div>
<div class="row-fluid pagination-centered">
  <h1>{{name}}</h1>
</div>


<hr>

<div class="row-fluid">
  {{#if phone}}
  <div class="span3 pagination-centered">
    <a href="tel:{{phone}}"><i class="icon-phone-sign icon-align-center icon-2x"></i></a>
  </div>
  <div class="span3 pagination-centered">
    <a href="sms:{{phone}}?body=TEST"><i class="icon-mobile-phone icon-align-center icon-2x"></i></a>
  </div>
  {{/if}}
  {{#if email}}
  <div class="span3 pagination-centered">
    <a href="mailto:{{email}}"><i class="icon-envelope icon-2x"></i></a>
  </div>
  {{/if}}
  <div class="span3 pagination-centered">
    <i class="icon-facebook-sign icon-2x"></i>
  </div>

</div>

<hr>

<div class="add-journal row-fluid">
  <textarea id="add-journal-textarea" class="span12" rows="3"  placeholder="Tap to add a journal entry" />
  <button id="add-journal-btn" class="btn btn-primary btn-medium">Add <i class="icon-plus-sign" /></button>
</div>

<a class="btn btn-large btn-block" href="#mentees/{{id}}/journal">View Journal</a>