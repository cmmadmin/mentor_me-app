<form id="edit-mentee-form">
  <div class="row-fluid">
    <input class="span12" type="text" data-value="mentee.name" placeholder="Name" />
  </div>

  <div class="row-fluid">
    <div class="controls controls-row">
      <input class="span6" type="date" name="birth_date" data-value="mentee.birth_date" />
      <label for="age" class="span1 text-right">Age:</label>
      <span class="span5"><span class="uneditable-input" data-text="mentee:age < .birth_date" /></span>
    </div>
  </div>

  <div class="row-fluid">
    <input class="span12" type="text" data-value="mentee.major" placeholder="Major" />
  </div>

  <div class="row-fluid">
    <input class="span12" type="email" data-value="mentee.email" placeholder="Email"/>
  </div>


  <div class="row-fluid">
    <input id="phone" class="span12" type="tel" data-value="mentee.phone" placeholder="Phone" />
  </div>

  <div class="row-fluid">
    <textarea class="span12" data-value="mentee.notes" placeholder="Notes" />
  </div>

  <button class="btn btn-primary" data-saving-text="Saving..." type="submit">Save</button>
</form>