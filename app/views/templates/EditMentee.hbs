<form id="edit-mentee-form">
  <div class="row-fluid">
    <input class="span12" type="text" data-value="mentee.name" placeholder="Name" />
  </div>

  <div class="row-fluid">
    
    <input class="span6" type="text" data-value="mentee.major" placeholder="Major" />
    <input class="span6" type="date" data-value="mentee.birth_date" />
  </div>

  <div class="row-fluid">
    <input class="span12" type="email" data-value="mentee.email" placeholder="Email"/>
  </div>


  <div class="row-fluid">
    <input class="span12" type="tel" data-value="mentee.phone" placeholder="Phone" />
  </div>

  <button class="btn btn-primary" data-saving-text="Saving..." type="submit">Save</button>
</form>