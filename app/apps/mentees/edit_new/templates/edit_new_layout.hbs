<h2 class="title">{{ pageTitle }}</h2>
<div class="list">
  <div class="name-image item-thumbnail-left">
    {{!-- <div class="avatar edit-avatar"> --}}
      {{!-- {{#if avatar_mobile_url}} --}}
          <img id="edit-avatar-img" class="hidden" src="{{avatar_mobile_url}}" />
      {{!-- {{else}} --}}
          <i class="icon-user hidden" style="display: inline-block"></i>
      {{!-- {{/if}} --}}
    {{!-- </div> --}}
    <label class="item item-input">
      <input type="text" name="name" rv-value="mentee:name" placeholder="Full Name">
    </label>
  </div>
  <label class="item item-input">
    <input type="text" name="phone" rv-value="mentee:phone" placeholder="Phone">
  </label>
  <label class="item item-input">
    <input type="text" name="email" rv-value="mentee:email" placeholder="Email">
  </label>
  <label class="item item-input">
    <input type="text" name="date" rv-value="mentee:birth_date" placeholder="Birthday">
  </label>
  <label class="item item-input">
    <input type="text" name="major" rv-value="mentee:major" placeholder="Major">
  </label>
</div>
<div class="submit">
  <button class="button button-pink">Save &amp; Close</button>
</div>