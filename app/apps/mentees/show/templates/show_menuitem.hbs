<div id="{{name}}" class="menuitem row">
  {{#unless progress}}
    <img src="images/indicator.png">
  {{/unless}}
  <div class="menuitem-info">
    <div class="menuitem-text">
      <h2>{{name}}</h2>
      <p>{{description}}</p>
    </div>
    {{#unless isMax}}
      <div class="menuitem-progress">
        <p class="progress">{{progress}}%</p>
      </div>
    {{/unless}}
  </div>
  <div class="progressbar-container">
    <progress value="{{progress}}" max="100"></progress>
  </div>
</div>