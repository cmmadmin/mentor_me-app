<div id="banner" class="list">
  <div class="mentee item item-dark item-thumbnail-left">
    <div class="mentee-info">
      {{#if avatar_mobile_url}}
          <img class="icon-user" src="{{avatar_mobile_url}}" />
      {{else}}
          <i class="icon-user" style="display: inline-block"></i>
      {{/if}}
      <h2>{{name}}</h2>
      <p>{{major}}</p>
      {{#if phone}}
        <a href="tel:{{phone}}"><i class="icon ion-ios7-telephone"></i></a>
        <a href="sms:{{phone}}"><i class="icon ion-ios7-chatbubble"></i></a>
      {{/if}}
      {{#if email}}
        <a href="mailto:{{email}}"><i class="icon ion-ios7-email"></i></a>
      {{/if}}
    </div>
    <div class="edit-button-container clearfix">
      <p id="edit-button">Edit</p>
    </div>
  </div>
</div>
