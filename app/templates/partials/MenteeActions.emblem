.add-journal.row
  textarea#add-journal-textarea.col-12 placeholder="Tap to add a journal entry" rows="3"
  .journal-notifications.pull-left
  .add-journal-ctrls.row-fluid
    .pull-right
        button#add-journal-btn.btn.btn-primary.btn-medium
          | Add
          i.icon-plus-sign
    .pull-right style="padding-right: 12px; line-height: 30px" 
      | at 
      a href="#" id="journaldate" data-value="{{currentTime 'MM/DD/YY HH:mm'}}"
    
a.btn.btn-default.btn-large.btn-block href="#mentees/{{id}}/journal" View Journal