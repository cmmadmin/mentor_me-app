// nib is a powerful lib for stylus that provides cross-browser css3 mixins.
// No more vendor prefixes. http://visionmedia.github.com/nib/
@import 'nib'

// Apply a natural box layout model to all elements.
// http://paulirish.com/2012/box-sizing-border-box-ftw/
*
  box-sizing: border-box

#home-view
  width: 1003px
  margin: 0 auto

// TODO: Use media queries to restrict to touch-only devices
*.ui-listview *.ui-btn-up-c,
*.ui-listview *.ui-btn-down-c,
*.ui-listview *.ui-btn-hover-c {
  // Copy your .ui-btn-up styles here */
  border: 1px solid     #ccc
  background:       #eee
  font-weight: bold
  color:          #222
  text-shadow: 0 1px 0 #fff 
  background-image: linear-gradient(top, white, #f1f1f1)
}

// Performance improvements
// TranslateZ(0) Hardware Acceleration Hack for Webkit
.ui-page > div {
  -webkit-transform: translateZ(0);
}

// Widgets
.add-journal
  padding-bottom: 10px
  > button
    float: right
    visibility: hidden
    opacity: 0
    transition-property: opacity
    transition-duration: 0.7s
  &.selected > button
    visibility: visible
    opacity: 1
    transition-property: opacity
    transition-duration: 0.3s